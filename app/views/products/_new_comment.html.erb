<% if signed_in? %>
<div class = "reviews">
  <h3>Add a review</h3>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
   
     <%= f.label :rating %><br>
    <div class="rating"></div>
  </p>
    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>
</div>