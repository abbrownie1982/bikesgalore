      <ul>
        <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-group">
  <div class="form-group row">
    <%= f.label :product_id, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :product_id, class: "col-sm-8", placeholder: "Product ID" %>
  </div>
  
  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :name, class: "col-sm-8", placeholder: "Name" %>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-form-label" %>
    <%= f.text_area :description, class: "col-sm-8", placeholder: "Description"  %>
  </div>

  <div class="form-group row">
    <%= f.label :image_url, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :image_url, class: "col-sm-8", placeholder: "Image url" %>
  </div>

  <div class="form-group row">
    <%= f.label :colour, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :colour, class: "col-sm-4", placeholder: "Colour" %>
  </div> 

  <div class="form-group row">
    <%= f.label :price, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :price, class: "col-sm-4", placeholder: "Price" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>

